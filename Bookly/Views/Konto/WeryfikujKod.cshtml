@model Bookly.Models.WeryfikacjaKoduViewModel
@{
    ViewBag.Title = "Weryfikuj";
}
<h2>@ViewBag.Title.</h2>
@using (Html.BeginForm("WeryfikujKod", "Konto", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("provider", @Model.Provider)
    @Html.Hidden("zapamietajMnie", @Model.ZapamietajMnie)
    <h4>Wprowadz Kod Weryfikujący</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Kod", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Kod, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="checkbox">
                @Html.CheckBoxFor(m => m.ZapamietajPrzegladarke)
                @Html.LabelFor(m => m.ZapamietajPrzegladarke)
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Potwierdz" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

