
@model Bookly.Models.Basket
@{
    ViewBag.Title = "Koszyk";
}
<h2>@ViewBag.Title:</h2>
@if (Model.Ksiazka.Any())
{
    <table class="table">
        <tr>
            <th>Tytul</th>
            <th>ISBN</th>
            <th></th>
        </tr>
        @foreach (var item in Model.Ksiazka)
        {
            <tr>
                <td>@Html.DisplayName(item.Tytul)</td>
                <td>@Html.DisplayName(item.ISBN)</td>
                <td>@Html.ActionLink( "UsunZKoszyka", "Koszyk", new { bookid = item.BookID }, new { @class = "btn btn-danger" })</td> @*remove*@
            </tr>
        }
    </table>
}
else
{
    <p>Koszyk jest pusty</p>
}
@if (Model.Ksiazka.Any())
{
    @Html.ActionLink( "Wypozycz", "Koszyk", null, new { @class = "btn btn-info" })
}

